<article class="blog-post">
  <h2 class="blog-post-title"><%= @article.title %></h2>
  <p class="blog-post-meta">
    <%= render 'articles/components/article_detail', article: @article%>
  </p>
  <p><%= @article.body %></p>
  <%= link_to "edit", edit_article_path(@article), class: "btn btn-primary" if policy(@article).update? %>
  <% if policy(@article).destroy? %>
    <%= link_to 'delete', 
        article_path(@article),
        data: { "turbo-method": :delete, 'turbo-confirm': 'Are you sure?' },
        class: "btn btn-danger" 
         %>
  <% end %>
  <%= link_to "back", root_path, class: "btn btn-secondary" %>
  <%= render 'comments/comments', article: @article %>
</article>
